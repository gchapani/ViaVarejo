@using System.Text
@{
    string Token = null;

    if (ViewBag.Token)
    {
        try
        {
            Token = Encoding.UTF8.GetString(Convert.FromBase64String(Request.Cookies.Get("ApiToken").Value));
        }
        catch (Exception)
        {
            Token = null;
        }
    }
}

